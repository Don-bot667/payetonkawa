---
interface Props {
    currentPage: 'dashboard' | 'clients' | 'produits' | 'commandes';
}

const { currentPage } = Astro.props;
---

<aside class="w-64 bg-[#120905] text-white flex flex-col shadow-2xl border-r border-[#2D1B14]">
    <div class="p-6 border-b border-[#2D1B14]/50">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-[#2D1B14] flex items-center justify-center shrink-0 border border-[#4A3228]">
                <img src="/img/logo.png" alt="Logo" class="w-8 h-8 object-contain">
            </div>
            <div>
                <h1 class="text-lg font-bold tracking-tight text-[#E3CBA3]">PayeTonKawa</h1>
                <p class="text-[#634832] text-[10px] uppercase tracking-widest font-semibold">Administration</p>
            </div>
        </div>
    </div>

    <nav class="flex-1 p-4 space-y-1.5">
        <p class="text-[10px] font-bold text-[#4A3228] uppercase tracking-[0.2em] px-4 mb-3">Menu</p>

        <a
            href="/"
            class:list={[
                "flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 group",
                currentPage === 'dashboard' 
                    ? "bg-[#2D1B14] text-[#E3CBA3] border border-[#4A3228]/40 shadow-inner" 
                    : "text-[#8C7365] hover:bg-[#1A0F0A] hover:text-[#E3CBA3]"
            ]}
        >
            <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
            <span class="font-medium">Dashboard</span>
        </a>

        <a
            href="/clients"
            class:list={[
                "flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 group",
                currentPage === 'clients' 
                    ? "bg-[#2D1B14] text-[#E3CBA3] border border-[#4A3228]/40 shadow-inner" 
                    : "text-[#8C7365] hover:bg-[#1A0F0A] hover:text-[#E3CBA3]"
            ]}
        >
            <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            <span class="font-medium">Clients</span>
        </a>

        <a
            href="/produits"
            class:list={[
                "flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 group",
                currentPage === 'produits' 
                    ? "bg-[#2D1B14] text-[#E3CBA3] border border-[#4A3228]/40 shadow-inner" 
                    : "text-[#8C7365] hover:bg-[#1A0F0A] hover:text-[#E3CBA3]"
            ]}
        >
            <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
            <span class="font-medium">Produits</span>
        </a>

        <a
            href="/commandes"
            class:list={[
                "flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 group",
                currentPage === 'commandes' 
                    ? "bg-[#2D1B14] text-[#E3CBA3] border border-[#4A3228]/40 shadow-inner" 
                    : "text-[#8C7365] hover:bg-[#1A0F0A] hover:text-[#E3CBA3]"
            ]}
        >
            <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
            </svg>
            <span class="font-medium">Commandes</span>
        </a>
    </nav>
</aside>